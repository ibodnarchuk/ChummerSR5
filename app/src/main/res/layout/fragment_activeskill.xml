<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollview1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/fragment_activeskill_SkillGroups_TableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ScrollView>


    <ScrollView
        android:id="@+id/scrollview2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/scrollview1"
        android:layout_toRightOf="@+id/scrollview1"
        android:layout_alignParentTop="true">

        <TableLayout
            android:id="@+id/fragment_activeskill_Skills_TableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ScrollView>

    <TextView
        android:id="@+id/fragment_activeskill_freeSkills_Counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/fragment_activeskill_freeSkillGroups_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fragment_activeskill_freeSkills_Counter"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/karma_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fragment_activeskill_freeSkillGroups_counter"
        android:textSize="50sp" />

</RelativeLayout>