<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearQualitiesContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <FrameLayout
            android:id="@+id/positiveQualitiesFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical" />

        <FrameLayout
            android:id="@+id/NegativeQualitiesFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/attributeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/linearQualitiesContainer"
        android:layout_toEndOf="@+id/linearQualitiesContainer"
        android:orientation="vertical"
        />

    <TextView
        android:id="@+id/karmaCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="50sp" />
</RelativeLayout>